<!DOCTYPE html>
<html>

<head>
	Approval of Reviews
</head>

<body>
	<table>
	{{#each review}}
	<tr>
		<td>{{this.user}}</td>
	</tr>
	<tr>
		<td>{{this.review_text}}</td>
	</tr>
	<tr>
		<td>{{this.review_score}}</td>
	</tr>
	<tr>
		<form action="/approval/reviews" method="post">
			<td> <input type="submit" name="{{this.id}}" value="Approve"/> </td>
		</form>
		<form action="/approval/reviews" method="post">
			<td><input type="submit" name="{{this.id}}" value="Reject"/></td>
		</form>
	<tr>
	{{/each}}
	</table>
</body>

</html>