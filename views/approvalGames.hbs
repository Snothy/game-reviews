<!DOCTYPE html>
<html>

<head>
	Approval of Games
</head>

<body>
	<table>
	{{#each games}}
	<tr>
		<td>{{this.title}}</td>
	</tr>
	<tr>
		<td>{{this.imageSrc}}</td>
	</tr>
	<tr>
		<td>{{this.summary}}</td>
	</tr>
	<tr>
		<form action="/approval/games" method="post">
			<td> <input type="submit" name="{{this.gameID}}" value="Approve"/> </td>
		</form>
		<form action="/approval/games" method="post">
			<td><input type="submit" name="{{this.gameID}}" value="Reject"/></td>
		</form>
	<tr>
	{{/each}}
	</table>
</body>

</html>